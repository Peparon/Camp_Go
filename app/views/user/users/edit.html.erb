<div class="container">
  <div class="col-lg-10 offset-lg-1">
    <div class="row">
      <div class="col-lg-5 text-center mb-3">
        <h2 class="head-line title_h2 text-center">会員情報編集</h2>
      </div>
    </div>

    <%= form_with(model:@user, url:user_path, local: true ,method: :put) do |f| %>

      <div class="row field">
        <%= f.label :"名前", class: "col-lg-2 col-form-label" %>
        <div class="col-lg-2">
          <%= f.text_field :last_name, class:"form-control" %>
        </div>
        <div class="col-lg-2">
          <%= f.text_field :first_name, class:"form-control" %>
        </div>
      </div>

      <div class="row field">
        <%= f.label :"フリガナ", class: "col-lg-2 col-form-label" %>
        <div class="col-lg-2">
          <%= f.text_field :last_name_kana, class:"form-control"%>
        </div>
        <div class="col-lg-2">
          <%= f.text_field :first_name_kana, class:"form-control" %>
        </div>
      </div>

      <div class="row field">
        <%= f.label :"メールアドレス", class: "col-lg-2 col-form-label" %>
        <div class="col-lg-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="row field">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-lg-2 col-form-label" %>
        <div class="col-lg-4">
          <%= f.text_field :post_code, class:"form-control" %>
        </div>
      </div>

      <div class="row field">
        <%= f.label :"住所", class: "col-lg-2 col-form-label" %>
        <div class="col-lg-6">
          <%= f.text_field :address, class:"form-control" %>
        </div>
      </div>

      <div class="row field">
        <%= f.label :"電話番号(ハイフンなし)", class: "col-lg-2 col-form-label" %>
        <div class="col-lg-4">
          <%= f.text_field :phone_number, class:"form-control" %>
        </div>
      </div>

      <div>
        <div class="col-lg-5 text-center">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
          <%= link_to '退会する', quit_user_path, class: "btn btn-danger"%>
        </div>
      </div>
    <% end %>
      <!--</%= link_to "戻る", user_path(@user.id), class: "btn btn-primary pull-right" %>-->
  </div>
</div>
