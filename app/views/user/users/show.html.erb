<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">マイページ</h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="active">氏名</td>
            <td><%= (@user.last_name + @user.first_name) %></td>
          </tr>
          <tr>
            <td class="active">カナ</td>
            <td><%= (@user.last_name_kana + @user.first_name_kana) %></td>
          </tr>
          <tr>
            <td class="active">郵便番号</td>
            <td><%= @user.post_code.to_s.insert(3, "-") if @user.post_code.present? %></td>
          </tr>
          <tr>
            <td class="active">住所</td>
            <td><%= @user.address if @user.address.present? %></td>
          </tr>
          <tr>
            <td class="active">電話番号</td>
            <td><%= @user.phone_number %> </td>
          </tr>
          <tr>
            <td class="active">メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <div class="col-md-6 mb-2">
          <%= link_to "編集する", edit_user_path(@user.id), class: "btn btn-primary btn-block" %>
        </div>
        <div class="col-md-6">
          <%= link_to "パスワードの変更", edit_user_registration_path(@user.id), class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
