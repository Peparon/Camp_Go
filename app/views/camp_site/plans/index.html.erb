<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>プラン一覧</h1>
      <div class="text-right">
       <%= link_to new_camp_site_plan_path(@camp_site), class: "btn btn-primary" do %> + <% end %>
      </div>
      <table class="table">
          <tr>
            <th>プラン名</th>
            <th>プラン詳細</th>
            <th>税込価格</th>
            <th>定員数</th>
            <th></th>
          </tr>
        <tbody>
          <% @plans.each do |plan| %>
            <tr>
              <td><%= plan.name %></td>
              <td><%= plan.about %></td>
              <td>¥<%= plan.price %></td>
              <td><%= plan.capacity %></td>
              <td><%= link_to "編集", edit_camp_site_plan_path(plan), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
