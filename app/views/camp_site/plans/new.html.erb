<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <h1 class="head-line title_h2">新規プラン作成</h1>
      <%= form_with model: @plan, url: camp_site_plans_path, local: true do |f| %>
        <%= hidden_field_tag :camp_site_id, @camp_site.id %>
        <div class="form-group">
          <%= f.label :プラン名, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :説明, class: "form-label" %>
          <%= f.text_area :about, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :金額（税込み）, class: "form-label" %>
          <%= f.number_field :price, class: "form-control" %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-3">
  <% if flash.now[:error].present? %>
    <div class="alert alert-danger">
      <%= flash.now[:error] %>
    </div>
  <% end %>
</div>
