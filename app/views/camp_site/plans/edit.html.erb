<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h1 class="head-line title_h2 text-center">プラン編集</h1>

      <%= form_with(model: @plan, url: camp_site_plan_path(@plan), local: true, method: :patch) do |f| %>

        <div class="form-group">
          <%= f.label :name, "プラン名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :about, "詳細", class: "form-label" %>
          <%= f.text_area :about, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :price, "金額", class: "form-label" %>
          <%= f.number_field :price, class: "form-control" %>
        </div>

        <div class="text-right">
          <%= f.submit "更新", class: "btn btn-primary" %>
          <%= link_to "削除", camp_site_plan_path(@plan), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>

        </div>
      <% end %>
    </div>
  </div>
</div>
