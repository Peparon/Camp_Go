<div class="container">
  <h2>新規登録</h2>
  <div class="row">
    <div class="col-xs-8">
  
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
      
      <div class="field">
        <%= f.label :名前, class: "col-lg-3" %>
        <%= f.label :"(姓)", class: "col-xs-2" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-lg-3" %>
        <%= f.label :"(名)", class: "col-xs-2" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-lg-3" %>
      </div>
      
      <div class="field">
        <%= f.label :フリガナ, class: "col-lg-3" %>
        <%= f.label :"(セイ)", class: "col-xs-2" %>
        <%= f.text_field :last_name_kana, autofocus: true, class: "col-lg-3" %>
        <%= f.label :"(メイ)", class: "col-xs-2" %>
        <%= f.text_field :first_name_kana, autofocus: true, class: "col-lg-3" %>
      </div>
      
      <div class="row form-group">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-lg-4" %>
        <%= f.text_field :post_code, autofocus: true, class: "col-lg-3" %>
      </div>
  
      <div class="row form-group">
        <%= f.label :住所, class: "col-lg-3" %>
        <%= f.text_field :address, autofocus: true, class: "col-lg-3" %>
      </div>
      
      <div class="row form-group">
        <%= f.label :"電話番号(ハイフンなし)", class: "col-lg-4" %>
        <%= f.text_field :phone_number, autofocus: true, class: "col-lg-3" %>
      </div>
      
      <div class="field">
        <%= f.label :メールアドレス, class: "col-lg-3" %>
        <%= f.email_field :email, autofocus: true, class: "col-lg-3" %>
      </div>
      
      <div class="field">
        <%= f.label :"パスワード(6文字以上)", class: "col-lg-4" %>
        <%= f.password_field :password, autocomplete: "off", class: "col-lg-3" %>
      </div>
      
      <div class="field">
        <%= f.label :"パスワード(確認用)", class: "col-lg-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-lg-3" %>
      </div>
      
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
      
      <% end %>
      
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>