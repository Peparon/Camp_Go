<header>
 <div class="container">
  <div class="row">
   <div class="col-md-4 d-flex align-items-center">
    <!--ロゴ-->
    <nav class="h_icon">
     <%= link_to camp_site_signed_in? ? camp_site_users_path : root_path, class: 'h_icon_link' do %>
       <i class="fas fa-campground" style="color: #31af3a;"></i>
       CampGO
     <% end %>
    </nav>
   </div>

     <% if user_signed_in? %>
      <div class="col-md-4">
       <!--ユーザー-->
       <li class="user-name">
        ようこそ、<%= current_user.first_name %>さん！
       </li>
      <!--</div>-->
      <!--<div class="col-md-4">-->
        <%= link_to "TOP", root_path, class: 'btn btn-outline-light' %>
        <%= link_to "マイページ", user_path(current_user), class: 'btn btn-outline-light' %>
        <!--予約確認-->
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-outline-light' %>
      <!--</div>-->
     <% elsif camp_site_signed_in? %>
      <!--<div>-->
        <!--キャンプサイト-->
        <%= link_to "マイページ", camp_site_camp_site_path(current_camp_site), class: 'btn btn-outline-light' %>
        <%= link_to "予約者一覧", camp_site_users_path, class: 'btn btn-outline-light' %>
        <%= link_to "プラン", camp_site_plans_path(camp_site_id: current_camp_site.id), class: 'btn btn-outline-light' %>
        <%= link_to "ログアウト", destroy_camp_site_session_path, method: :delete, class: 'btn btn-outline-light' %>
       </ul>
      <!--</div>-->
     <% else %>
      <!--<div>-->
        <!--ログアウト-->
        <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-outline-light' %>
        <%= link_to "ログイン", new_user_session_path, class: 'btn btn-outline-light' %>
      </div>
     <% end %>
  </div>
 </div>
</header>
