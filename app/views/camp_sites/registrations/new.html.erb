<div class="container">
  <h2 class="mt-4">キャンプ場新規登録</h2>
  <div class="row">
    <div class="col-md-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mt-4' }) do |f| %>
        <%= render "camp_sites/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label :"キャンプサイト名", class: "col-lg-3 col-form-label" %>
          <div class="col-lg-8">
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-lg-4 col-form-label" %>
          <div class="col-lg-8">
            <%= f.text_field :post_code, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :住所, class: "col-lg-3 col-form-label" %>
          <div class="col-lg-8">
            <%= f.text_field :address, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-lg-4 col-form-label" %>
          <div class="col-lg-8">
            <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-lg-3 col-form-label" %>
          <div class="col-lg-8">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :"パスワード(6文字以上)", class: "col-lg-4 col-form-label" %>
          <div class="col-lg-8">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :"パスワード(確認用)", class: "col-lg-4 col-form-label" %>
          <div class="col-lg-8">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-10 offset-md-2">
            <%= f.submit "新規登録", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>

      会員登録が既に登録済みの方は<%= render "camp_sites/shared/links" %>
    </div>
  </div>
</div>
